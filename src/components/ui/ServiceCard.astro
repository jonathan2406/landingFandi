---
import { Image } from "astro:assets";
import Card from "./Card.astro";

import gob from "../../assets/icon6.svg";
import wob from "../../assets/icon7.svg";

/* 
1. White card with primary color title and primary on black icon 
2. Primary color card with white title and primary on black icon
3. Black card with white title and white on black icon
*/

const { index, titleTop, titleBottom, img, alt, description } = Astro.props;
---

<Card isUnderline={true}>
  <div
    class=`service-card overflow-hidden transition-all duration-300 cursor-pointer w-full rounded-[45px] ${index === 1 ? 'bg-white' : index === 2 ? 'bg-secondary' : 'bg-dark text-white'}`
    data-card-id={`card-${Math.random().toString(36).substr(2, 9)}`}
  >
    <div class=`h-[300px] w-full lg:gap-[60px] grid custom-grid lg:grid-cols-2 lg:grid-rows-1 p-8 sm:p-[50px]`>
      <h3 class=`flex flex-col col-span-2 lg:col-span-1`>
        <span class=`w-[fit-content] ${index === 1 ? 'primaryhead' : 'whitehead'}`
          >{titleTop}</span
        >
        <span class=`w-[fit-content] ${index === 1 ? 'primaryhead' : 'whitehead'}`
          >{titleBottom}</span
        >
      </h3>
      <picture
        class="w-full h-full row-span-1 order-1 lg:order-none lg:row-span-2 flex justify-center items-center"
      >
        <Image
          src={img}
          alt={alt}
          class="h-[100px] w-auto sm:h-auto sm:w-3/4 object-cover"
        />
      </picture>
      
    </div>
    
    <!-- DescripciÃ³n -->
    <div class=`description-content px-8 sm:px-[50px] pb-8 sm:pb-[50px]`>
      <div class=`w-full h-[2px] mb-5 ${index === 1 ? 'bg-primary' : 'bg-white'} opacity-30`></div>
      <p class=`text-sm sm:text-base ${index === 1 ? 'text-dark' : 'text-white'}`>
        {description}
      </p>
    </div>
  </div>
</Card>

<style>
  .custom-grid {
    grid-template: auto auto;
  }
</style>


