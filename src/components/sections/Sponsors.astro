---
import { Image } from "astro:assets";
import s1 from "../../assets/pics/company-logo1.svg";
import s2 from "../../assets/pics/company-logo2.svg";
import s3 from "../../assets/pics/company-logo3.svg";
import s4 from "../../assets/pics/company-logo4.svg";
import s5 from "../../assets/pics/company-logo5.svg";
import s6 from "../../assets/pics/company-logo6.svg";
import Section from "./Section.astro";

const partners = [
  { logo: s1, alt: "Páramo Presenta" },
  { logo: s2, alt: "Movistar Arena" },
  { logo: s3, alt: "Coliseo Live" },
  { logo: s4, alt: "Teatro Mayor" },
  { logo: s5, alt: "Royal Center" },
  { logo: s6, alt: "Estéreo Picnic" },
];
---

<Section id="sponsors">
  <div class="text-center mb-8">
    <h3 class="text-2xl font-medium text-dark">Nuestros Partners</h3>
    <p class="text-gray-600 mt-2">Confían en Fandi para revolucionar sus eventos</p>
  </div>
  <div class="flex flex-wrap justify-between gap-7 mt-[60px]">
    {
      partners.map((partner) => {
        return (
          <div>
            <Image src={partner.logo} alt={partner.alt} loading="eager" />
          </div>
        );
      })
    }
  </div>
</Section>
