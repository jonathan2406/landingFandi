---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Conoce al equipo visionario detrás de Fandi, uniendo experiencia en tecnología, música y experiencias de usuario para revolucionar los conciertos en vivo";

import {
  default as p1,
  default as p2,
  default as p3,
  default as p4,
  default as p5,
  default as p6,
} from "../../assets/pics/profile-pic.png";

const team = [
  {
    pic: p1,
    name: "Ana Rodriguez",
    role: "CEO & Co-fundadora",
    description:
      "5+ años en tecnología musical y experiencias en vivo. Visionaria en conectar artistas con audiencias de formas innovadoras",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Carlos Mendez",
    role: "CTO & Co-fundador",
    description:
      "Experto en arquitectura de software escalable y sistemas en tiempo real. Especialista en plataformas de pagos y algoritmos de categorización",
    link: "https://linkedin.com",
  },
  {
    pic: p3,
    name: "Sofia Martinez",
    role: "Directora de Producto",
    description:
      "UX/UI Designer con experiencia en aplicaciones móviles para eventos en vivo. Enfocada en crear experiencias de usuario excepcionales",
    link: "https://linkedin.com",
  },
  {
    pic: p4,
    name: "Diego Ramirez",
    role: "Director de Partnerships",
    description:
      "Especialista en relaciones con la industria musical y organizadores de eventos. Constructor de alianzas estratégicas",
    link: "https://linkedin.com",
  },
  {
    pic: p5,
    name: "Lucia Torres",
    role: "Head of Operations",
    description:
      "Experta en logística de eventos y operaciones en tiempo real. Garantiza la ejecución perfecta de experiencias en vivo",
    link: "https://linkedin.com",
  },
  {
    pic: p6,
    name: "Miguel Vargas",
    role: "Data Scientist",
    description:
      "Especialista en algoritmos de machine learning y análisis de comportamiento de audiencias para optimización de experiencias",
    link: "https://linkedin.com",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Nuestro Equipo" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">Ver todo el equipo</button>
    </div>
  </div>
</Section>
